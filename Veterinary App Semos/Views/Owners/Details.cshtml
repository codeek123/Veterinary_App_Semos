@model Veterinary_App_Semos.Models.Owner

@{
    ViewData["Title"] = "Details";
}

<link rel="stylesheet" href="~/css/details.css" />

<div class="container mt-4">
    <div class="card owner-card">
        <div class="text-center owner-title">
            🐾 Owner Information 🐾
        </div>
       
        <hr>
        <div class="card-body p-3">
            <p><strong>@Html.DisplayNameFor(model => model.Name):</strong> @Html.DisplayFor(model => model.Name)</p>
            <p><strong>@Html.DisplayNameFor(model => model.Surname):</strong> @Html.DisplayFor(model => model.Surname)</p>
            <p><strong>@Html.DisplayNameFor(model => model.Age):</strong> @Html.DisplayFor(model => model.Age)</p>
            <h5 class="pets-title">Pets</h5>
            <ul class="list-group small">
                @foreach (var pet in Model.Pets)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        @pet.Name
                        <span class="badge pet-badge">🐾</span>
                    </li>
                }
            </ul>
        </div>
        <div class="card-footer text-center p-2 footer-bg">
            <a class="btn btn-sm edit-btn" asp-action="Edit" asp-route-id="@Model?.OwnerId">Edit</a>
            <a class="btn btn-sm back-btn" asp-action="Index">Back</a>
        </div>
    </div>
</div>
