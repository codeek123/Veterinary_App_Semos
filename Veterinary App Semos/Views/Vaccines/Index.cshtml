@model IEnumerable<Veterinary_App_Semos.Models.Vaccine>

@{
    ViewData["Title"] = "Vaccines";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/vaccineIndex.css" asp-append-version="true" />



<div class="container py-4">

<div class="title-container text-center">
    <h1> 💉 Vaccines Used in Our Clinic 💉</h1>
</div>

<div class="text-center">
    <a asp-action="Create" class="create-btn"><i class="fas fa-plus"></i> Create New Vaccine</a>
</div>

<div class="pill-container">
    @foreach (var item in Model)
    {
        <div class="vaccine-pill">
            <div class="pill-name">
                <i class="fas fa-syringe"></i> @item.Name
            </div>
            <div class="pill-actions">
                <a asp-action="Edit" asp-route-id="@item.VaccineId"><i class="fas fa-edit"></i> Edit</a>
                <a asp-action="Details" asp-route-id="@item.VaccineId"><i class="fas fa-info-circle"></i> Details</a>
                <a asp-action="Delete" asp-route-id="@item.VaccineId"><i class="fas fa-trash-alt"></i> Delete</a>
            </div>
        </div>
    }
</div>
</div>