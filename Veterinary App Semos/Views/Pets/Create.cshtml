@model Veterinary_App_Semos.Models.Pet

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/create.css" asp-append-version="true" />


<div class="form-wrapper animate__animated animate__fadeInUp">
    <h1>Add</h1>
    <h4>🐶 New Pet</h4>
    <hr />

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="form-group mb-3">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Age" class="control-label"></label>
            <input asp-for="Age" class="form-control" />
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="VaccinesNames" class="control-label"></label>
            <select asp-for="VaccinesNames" multiple required class="form-control" asp-items="ViewBag.VaccineId"></select>
            <span asp-validation-for="VaccinesNames" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="OwnerId" class="control-label"></label>
            <select asp-for="OwnerId" class="form-control" asp-items="ViewBag.OwnerId"></select>
        </div>

        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-violet" />
        </div>
    </form>

    <a asp-action="Index" class="back-link">← Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
