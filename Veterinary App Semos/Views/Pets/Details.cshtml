@model Veterinary_App_Semos.Models.Pet

@{
    ViewData["Title"] = "Details";
}

<link rel="stylesheet" href="~/css/details.css" />

<div class="container mt-4">
    <div class="card owner-card">
        <div class="text-center owner-title">
            🐾 Pet Information 🐾
        </div>
        
        <hr>
        <div class="card-body p-3">
            <p><strong>@Html.DisplayNameFor(model => model.Name):</strong> @Html.DisplayFor(model => model.Name)</p>
            <p><strong>@Html.DisplayNameFor(model => model.Age):</strong> @Html.DisplayFor(model => model.Age)</p>
            <p><strong>Owner:</strong> @Model.Owner.getFirstNameAndLastName()</p>
            <h5 class="pets-title">Vaccines</h5>
            <ul class="list-group small">
                @foreach (var vaccine in Model.Vaccines)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        @vaccine.Name
                    </li>
                }
            </ul>
        </div>
        <div class="card-footer text-center p-2 footer-bg">
            <a class="btn btn-sm edit-btn" asp-action="Edit" asp-route-id="@Model?.PetId">Edit</a>
            <a class="btn btn-sm back-btn" asp-action="Index">Back</a>
        </div>
    </div>
</div>
