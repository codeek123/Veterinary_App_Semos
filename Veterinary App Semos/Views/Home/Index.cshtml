@{
    ViewData["Title"] = "Home Page";
}

<head>
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="~/css/navbar.css">
    <link rel="stylesheet" href="~/css/home_page.css">
    <link rel="stylesheet" href="~/css/feedback.css">
</head>
<body>
   

<script src="~/js/site.js"></script>


<!-- Hero Section -->

    <section class="hero-section">
        <div class="slideshow">
            <img src="/images/pets1.jpg" class="slide active">
            <img src="/images/pets2.jpg" class="slide">
            <img src="/images/cat.jpg" class="slide">
        </div>
        <div class="image-text slide-position1 active">
            <h1>Best help for <br><span>your best friends</span></h1>
        </div>
    </section>


<!-- Services Section -->
<div class="container my-5">
    <h2 class="text-center mb-4">Our Services</h2>
    <div class="row">
        <div class="col-md-4">
            <div class="card service-card">
                <i class="fas fa-heartbeat service-icon"></i>
                <h4>Medical & Health</h4>
                <p>Professional medical services for your pets.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card service-card">
                <i class="fas fa-cut service-icon"></i>
                <h4>Grooming & Beauty</h4>
                <p>Pet grooming and styling services.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card service-card">
                <i class="fas fa-home service-icon"></i>
                <h4>Pet Accommodation</h4>
                <p>Safe and comfortable pet boarding.</p>
            </div>
        </div>
    </div>
</div>


<div class="vet-info-container">
    <div class="image">
        <img src="~/images/care.jpg" alt="Veterinary Clinic">
    </div>
    <div class="vet-info-text">
        <h2 style="color: #6a0dad">Hours</h2>
        <div class="hours">
            <p>Monday: 9:00 AM – 5:00 PM</p>
            <p>Tuesday: 9:00 AM – 5:00 PM</p>
            <p>Wednesday: 9:00 AM – 5:00 PM</p>
            <p>Thursday: 9:00 AM – 5:00 PM</p>
            <p>Friday: 9:00 AM – 5:00 PM</p>
            <p>Saturday: 9:00 AM – 12:00 PM</p>
            <p>Sunday: Closed</p>
        </div>
        <h2 style="color: #6a0dad">Address</h2>
        <div class="address">
            <p>390 East Main Street</p>
            <p>London, NJ 0909</p>
            <p>Phone: 070-390-390</p>
        </div>
    </div>
</div>


<div class="container my-5" style="background-color: white">
    <div class="row">

        <div class="col-md-6 about-us" style="background-color: white">
            <h2 class="section-title">About Us</h2>
            <p> Our Veterinary App empowers veterinarians with an efficient way to manage pet health records.</p>
            <p>
                It provides a clear overview of pets, their owners, administered vaccines, and pending vaccinations. With our platform, veterinary professionals can ensure accurate and timely care for every pet.
            </p>
          
            <h6>🐾 Smart, simple, and reliable pet health management!</h6>
           
        </div>


        <div class="col-md-6 how-to-use">
            <h2 class="section-title">How to Use</h2>
            <p>🐾 Sign Up & Log In – Create an account or log in to access the system.</p>
            <p>🐾 Add a New Owner – Register pet owners with their details.</p>
            <p>🐾 Register a Pet – Add new pets and link them to their respective owners.</p>
            <p>🐾 Manage Vaccinations – Record administered vaccines and track upcoming ones.</p>
            <p>🐾 Update Pet Records – Assign a new owner to a pet or update vaccination history.</p>
            <h5>💡 Effortless pet healthcare management at your fingertips! 🐾</h5>
        </div>
    </div>
</div>

<!-- About Us in Numbers -->
<div class="about-us text-center py-5">
    <h3>About us in numbers</h3>
    
    <div class="d-flex justify-content-around mt-4">
        <div>
            <h4>3</h4>
            <p>Veterinary Clinics</p>
        </div>
        <div>
            <h4>34560</h4>
            <p>Pets Treated</p>
        </div>
        <div>
            <h4>10</h4>
            <p>Years of Experience</p>
        </div>
    </div>
</div>


<section class="feedback-section">
    <h3 class="text-center">Feedback</h3>
    <div class="feedback-carousel">
        <button class="prev-btn" onclick="prevSlide()">&#10094;</button>

        <div class="feedback-slide active">
            <img src="~/images/user1.jpg" alt="User 1" class="feedback-image">
            <p class="feedback-text">"Amazing service! My pet received the best care!"</p>
            <div class="rating">
                <span>★</span><span>★</span><span>★</span><span>★</span><span>★</span>
            </div>
        </div>

        <div class="feedback-slide">
            <img src="~/images/user2.jpg" alt="User 2" class="feedback-image">
            <p class="feedback-text">"Friendly staff and very professional."</p>
            <div class="rating">
                <span>★</span><span>★</span><span>★</span><span>★</span><span>☆</span>
            </div>
        </div>

        <div class="feedback-slide">
            <img src="~/images/dog4.png" alt="User 3" class="feedback-image">
            <p class="feedback-text">"Highly recommend this clinic for all pet owners!"</p>
            <div class="rating">
                <span>★</span><span>★</span><span>★</span><span>★</span><span>★</span>
            </div>
        </div>

        <button class="next-btn" onclick="nextSlide()">&#10095;</button>
    </div>
</section>
</body>