<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Veterinary_App_Semos</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Veterinary_App_Semos.styles.css" asp-append-version="true" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="~/css/navbar.css">
    <link rel="stylesheet" href="~/css/privacy.css">
    <link rel="stylesheet" href="~/css/login.css">


</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logopet.jpg" alt="Logo" class="logo">
                    <span class="hospital-name">Healthy pets <br><small> Clinic</small></span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">HOME</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Owners" asp-action="Index">OWNERS</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Pets" asp-action="Index">PETS</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Vaccines" asp-action="Index">VACCINES</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="custom-footer mt-auto">
        <div class="container py-5">

            <div class="row text-start text-md-start">
                <!-- Emergency Column -->
                <div class="col-md-6 mb-4">
                    <h5 class="fw-bold"><i class="fas fa-clock me-2"></i>Emergency Services</h5>
                    <p class="small">
                        For emergency services outside of our regular hours,<br />
                        please contact the 24/7 Animal Hospital at <strong>(555) 123-4567</strong>.<br />
                        Our on-call veterinarian will work with them to ensure your pet receives immediate attention.
                    </p>
                </div>

                <!-- Visit Us + Contact Split Column -->
                <div class="col-md-6 mb-4">
                    <div class="row">
                        <!-- Visit Us -->
                        <div class="col-md-6">
                            <h5 class="fw-bold"><i class="fas fa-map-marker-alt me-2"></i>Visit Us</h5>
                            <p class="small mb-2">390 East Main Street<br />London</p>
                        </div>

                        <!-- Contact -->
                        <div class="col-md-6">
                            <h5 class="fw-bold"><i class="fas fa-phone me-2"></i>Contact</h5>
                            <p class="small mb-2">
                                Email: <a href="mailto:contact@gmail.com">contact@gmail.com</a><br />
                                Phone: <a href="tel:+38970390390">070-390-390</a>
                            </p>
                            <div class="social-icons mt-2">
                                <a href="#"><i class="fab fa-facebook-f"></i></a>
                                <a href="#"><i class="fab fa-instagram"></i></a>
                                <a href="#"><i class="fab fa-twitter"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <hr class="my-4" style="border-color: #d5baff;" />

            <div class="text-center small" style="color: #6a0dad;">
                © 2025 Veterinary_Clinic — All rights reserved. | <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
            </div>


        </div>
        <div class="footer-icons text-center mb-4">
            <i class="fas fa-paw"></i>
            <i class="fas fa-syringe"></i>
            <i class="fas fa-dog"></i>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
